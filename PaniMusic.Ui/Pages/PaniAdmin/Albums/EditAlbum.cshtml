@page
@model PaniMusic.Ui.Pages.PaniAdmin.Albums.EditAlbumModel
@{
    ViewData["Title"] = $"ویرایش آلبوم {Model.Album.Name}";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">ویرایش آلبوم @Model.Album.Name</h1>
            </div><!-- /.col -->
            <div class="col-sm-6 text-left">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row d-flex justify-content-center">

            <div class="col-8">


                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">ویرایش</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Input.Id"></label>
                                <input asp-for="Input.Id" class="form-control" value="@Model.Album.Id" readonly>
                                <span asp-validation-for="Input.Id" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Name"></label>
                                <input asp-for="Input.Name" class="form-control" value="@Model.Album.Name">
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>

                            <label asp-for="Input.MyCoverImage"></label>
                            <div class="col-md-12 form-group margin-bottom-40">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="height: 150px;">
                                        <img src="~/uploads/album/@Model.Album.CoverImage" />
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" style="height:200px"> </div>
                                    <div>
                                        <span class="btn default btn-file">
                                            <span class="fileinput-new btn btn-success"> انتخاب کنید </span>
                                            <span class="fileinput-exists btn btn-default"> تغییر عکس </span>
                                            <input type="file" asp-for="Input.MyCoverImage" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                        </span>
                                        <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>
                                    </div>
                                    <span asp-validation-for="Input.MyCoverImage" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MyQuality128"></label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" asp-for="Input.MyQuality128" accept=".zip" class="custom-file-input" id="exampleInputFile">
                                        <label class="custom-file-label" for="exampleInputFile">@Model.Album.Quality128</label>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.MyQuality128" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MyQuality320"></label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" asp-for="Input.MyQuality320" accept=".zip" class="custom-file-input" id="exampleInputFile">
                                        <label class="custom-file-label" for="exampleInputFile">@Model.Album.Quality320</label>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.MyQuality320" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Link"></label>
                                <input asp-for="Input.Link" class="form-control" value="@Model.Album.Link">
                                <span asp-validation-for="Input.Link" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.TitleTag"></label>
                                <input asp-for="Input.TitleTag" class="form-control" value="@Model.Album.TitleTag">
                                <span asp-validation-for="Input.TitleTag" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MetaDescription"></label>
                                <input asp-for="Input.MetaDescription" class="form-control" value="@Model.Album.MetaDescription">
                                <span asp-validation-for="Input.MetaDescription" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MetaTag"></label>
                                <input asp-for="Input.MetaTag" class="form-control" value="@Model.Album.MetaTag">
                                <span asp-validation-for="Input.MetaTag" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.StyleId"></label>
                                <select class="form-control select2" asp-for="Input.StyleId" asp-items="Model.ListOfStyles" style="width: 100%;"></select>
                                <span asp-validation-for="Input.StyleId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.ArtistId"></label>
                                <select class="form-control select2" asp-for="Input.ArtistId" asp-items="Model.ListOfArtists" style="width: 100%;"></select>
                                <span asp-validation-for="Input.ArtistId" class="text-danger"></span>
                            </div>


                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">ثبت</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
        <!-- /.row -->
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#albums-list').addClass('menu-open');
            $('#albums-link').addClass('active');
            $('#allalbums-link').addClass('active');
        });
    </script>
}