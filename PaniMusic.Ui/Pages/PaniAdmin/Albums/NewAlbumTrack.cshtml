@page
@model PaniMusic.Ui.Pages.PaniAdmin.Albums.NewAlbumTrackModel
@{
    ViewData["Title"] = $"آهنگ جدید برای آلبوم {Model.Album.Name}";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">افزودن آهنگ جدید برای آلبوم @Model.Album.Name</h1>
            </div><!-- /.col -->
            <div class="col-sm-6 text-left">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row d-flex justify-content-center">

            <div class="col-8">


                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">افزودن</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Input.Name"></label>
                                <input asp-for="Input.Name" class="form-control">
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MyQuality128"></label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" asp-for="Input.MyQuality128" accept=".mp3" class="custom-file-input" id="exampleInputFile">
                                        <label class="custom-file-label" for="exampleInputFile">انتخاب فایل</label>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.MyQuality128" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MyQuality320"></label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" asp-for="Input.MyQuality320" accept=".mp3" class="custom-file-input" id="exampleInputFile">
                                        <label class="custom-file-label" for="exampleInputFile">انتخاب فایل</label>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.MyQuality320" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="hidden" asp-for="Input.StyleId" value="@Model.Album.StyleId" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="hidden" asp-for="Input.ArtistId" value="@Model.Album.ArtistId" class="form-control">
                            </div>

                            <div class="form-group">
                                <input type="hidden" asp-for="Input.AlbumId" value="@Model.Album.Id" class="form-control">
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">ثبت</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
        <!-- /.row -->
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#albums-list').addClass('menu-open');
            $('#albums-link').addClass('active');
            $('#allalbums-link').addClass('active');
        });
    </script>
}
