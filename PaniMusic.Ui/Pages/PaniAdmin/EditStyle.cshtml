@page
@model PaniMusic.Ui.Pages.PaniAdmin.EditStyleModel
@{
    ViewData["Title"] = $"ویرایش سبک {Model.Style.Name}";
}


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">ویرایش سبک @Model.Style.Name</h1>
            </div><!-- /.col -->
            <div class="col-sm-6 text-left">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row d-flex justify-content-center">

            <div class="col-8">


                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">ویرایش</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" enctype="multipart/form-data">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Input.Id"></label>
                                <input asp-for="Input.Id" class="form-control" value="@Model.Style.Id" readonly>
                                <span asp-validation-for="Input.Id" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Name"></label>
                                <input asp-for="Input.Name" class="form-control" value="@Model.Style.Name">
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Description"></label>
                                <textarea class="form-control" id="mytextarea" name="Input.Description">@Model.Style.Description</textarea>
                                <span asp-validation-for="Input.Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Link"></label>
                                <input asp-for="Input.Link" class="form-control" value="@Model.Style.Link">
                                <span asp-validation-for="Input.Link" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.TitleTag"></label>
                                <input asp-for="Input.TitleTag" class="form-control" value="@Model.Style.TitleTag">
                                <span asp-validation-for="Input.TitleTag" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MetaDescription"></label>
                                <input asp-for="Input.MetaDescription" class="form-control" value="@Model.Style.MetaDescription">
                                <span asp-validation-for="Input.MetaDescription" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.MetaTag"></label>
                                <input asp-for="Input.MetaTag" class="form-control" value="@Model.Style.MetaTag">
                                <span asp-validation-for="Input.MetaTag" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">ثبت</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
        <!-- /.row -->
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#styles-list').addClass('menu-open');
            $('#styles-link').addClass('active');
            $('#allstyles-link').addClass('active');
        });
        tinymce.init({
            selector: '#mytextarea',
            height: 950,
            plugins: 'print preview fullscreen image link media template codesample table charmap hr help',
            toolbar1: 'formatselect | bold italic strikethrough forecolor backcolor | link | alignleft aligncenter alignright alignjustify  | numlist bullist outdent indent  | removeformat |fullscreen',
            language: 'fa_IR',
            directionality: 'rtl'
        });
    </script>
}