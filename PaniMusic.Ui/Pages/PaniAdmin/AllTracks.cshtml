@page
@model PaniMusic.Ui.Pages.PaniAdmin.AllTracksModel
@{
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">همه آهنگ ها</h1>
            </div><!-- /.col -->
            <div class="col-sm-6 text-left">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover">
                            <tr>
                                <th>شناسه</th>
                                <th>نام</th>
                                <th>تاریخ انتشار</th>
                                <th>سبک</th>
                                <th>خواننده</th>
                                <th>عملیات</th>
                            </tr>
                            @foreach (var item in Model.AllTracks)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.RecordDate.ToPersianDate()</td>
                                    <td>@item.Style.Name</td>
                                    <td>@item.Artist.Name</td>
                                    <td>
                                        <button type="button" asp-action="edittrack" value="@item.Id" class="btn btn-success"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> ویرایش</button>
                                        <button type="button" asp-action="deletetrack" value="@item.Id" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> حذف</button>
                                    </td>
                                </tr>
                            }


                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>

                <div class="d-flex justify-content-center">
                    <div dir="ltr" class="paging-nav index-paging" style="margin: 0px auto;">
                        <nav aria-label="...">
                            <ul class="pagination">
                                <li class="page-item @(((Model.PageId - 1) == 0) ? "disabled" : "")"><a class="page-link" href="?page=@(Model.PageId - 1)">قبلی</a></li>
                                @for (int pageNumber = 1; pageNumber < Model.PageCount; pageNumber++)
                                {
                                    <li class="page-item @((Model.PageId == pageNumber)?"active":"")"><a class="page-link" href="?page=@pageNumber">@pageNumber</a></li>
                                }
                            <li class="page-item @((Model.PageId == Model.PageCount) ? "disabled" : "")"><a class="page-link" href="?page=@(Model.PageId + 1)">بعدی</a></li>
                            </ul>
                    </nav>
                    </div>
                </div>

            </div>

        </div>
        <!-- /.row -->
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>

@section Scripts{
    <script>
  $(document).ready(function(){
    $('#musics-list').addClass('menu-open');
    $('#musics-link').addClass('active');
    $('#allmusics-link').addClass('active');
  });
    </script>
}