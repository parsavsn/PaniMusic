@page
@model PaniMusic.Ui.Pages.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود به حساب کاربری | پانی موزیک</title>
    <link href="~/img/favicon.png" rel="icon">
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/formstyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/myformstyle.css">
</head>
<body>
    <div class="form-body without-side">
        <div class="row">
            <div class="img-holder">
                <div class="bg"></div>
                <div class="info-holder">
                    <img src="~/img/graphic3.svg">
                </div>
            </div>
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items text-right" dir="rtl">
                        <img src="~/img/logo.png" style="margin-bottom: 35px;padding-right: 35px;">
                        <h3 class="text-right">ورود به حساب کاربری</h3>
                        <p class="text-right" style="font-size: 16px;">برای دسترسی به برخی از امکانات وبسایت ، ابتدا باید وارد حساب کاربری خود شوید.</p>
                        <form>
                            <input class="form-control text-right" type="text" name="username" placeholder="ایمیل" required>
                            <input class="form-control text-right" type="password" name="password" placeholder="رمز عبور" required>
                            <div class="form-button">
                                <button id="submit" type="submit" class="ibtn">ورود</button>
                                <a asp-page="ForgetPassword">رمز عبور را فراموش کرده‌اید؟</a>
                            </div>
                        </form>
                        <div class="other-links">

                        </div>
                        <div class="page-links">
                            <a asp-page="Register">ایجاد حساب کاربری جدید</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>